<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="2dp">

    <LinearLayout
        android:id="@+id/tool_bubble"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/bg_message_tool"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintHorizontal_bias="0.0">

        <!-- Tool icon -->
        <TextView
            android:id="@+id/tool_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="ðŸ”§"
            android:textSize="16sp" />

        <!-- Tool name -->
        <TextView
            android:id="@+id/tool_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/tool_name_color"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Bash" />

        <!-- Tool input/command -->
        <TextView
            android:id="@+id/tool_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/tool_input_color"
            android:textSize="13sp"
            android:fontFamily="monospace"
            tools:text="ls -la" />

        <!-- Streaming indicator -->
        <ProgressBar
            android:id="@+id/streaming_indicator"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- Hidden timestamp for compatibility -->
        <TextView
            android:id="@+id/message_timestamp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Hidden content for compatibility -->
        <TextView
            android:id="@+id/message_content"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
