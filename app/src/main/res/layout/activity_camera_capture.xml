<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <androidx.camera.view.PreviewView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Scan mode viewfinder overlay (shown in QR scan mode) -->
    <View
        android:id="@+id/scan_viewfinder"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:background="@drawable/qr_viewfinder"
        android:visibility="gone" />

    <!-- Bottom controls bar for photo mode -->
    <LinearLayout
        android:id="@+id/photo_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="#80000000">

        <!-- Gallery picker button -->
        <ImageButton
            android:id="@+id/gallery_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Pick from gallery"
            android:src="@android:drawable/ic_menu_gallery"
            app:tint="@android:color/white" />

        <!-- Capture button (center) -->
        <ImageButton
            android:id="@+id/capture_button"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_capture_button"
            android:contentDescription="Take photo"
            android:src="@drawable/ic_camera"
            app:tint="@android:color/white" />

        <!-- QR scan button -->
        <ImageButton
            android:id="@+id/qr_scan_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Scan QR code"
            android:src="@drawable/ic_qr_code"
            app:tint="@android:color/white" />

        <!-- Switch camera button -->
        <ImageButton
            android:id="@+id/switch_camera_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Switch camera"
            android:src="@android:drawable/ic_menu_rotate"
            app:tint="@android:color/white" />

    </LinearLayout>

    <!-- Bottom controls bar for scan mode -->
    <LinearLayout
        android:id="@+id/scan_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="24dp"
        android:background="#80000000"
        android:visibility="gone">

        <!-- Back to photo button -->
        <ImageButton
            android:id="@+id/back_to_photo_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back to photo"
            android:src="@drawable/ic_camera"
            app:tint="@android:color/white" />

    </LinearLayout>

    <!-- Instructions -->
    <TextView
        android:id="@+id/instruction_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="80dp"
        android:text="Take a photo or pick from gallery"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:shadowColor="@android:color/black"
        android:shadowRadius="3" />

    <!-- QR result overlay -->
    <LinearLayout
        android:id="@+id/qr_result_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#E0000000"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR Code Detected"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/qr_result_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:background="#40FFFFFF"
            android:padding="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/qr_cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/qr_confirm_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Use Text"
                android:backgroundTint="#4CAF50" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
