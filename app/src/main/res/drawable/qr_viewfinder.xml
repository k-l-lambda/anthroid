<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Transparent center -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Corner accents -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="200dp"
        android:bottom="200dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="#4169E1" />
            <corners android:topLeftRadius="8dp" />
        </shape>
    </item>

    <item
        android:left="200dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="200dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="#4169E1" />
            <corners android:topRightRadius="8dp" />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:top="200dp"
        android:right="200dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="#4169E1" />
            <corners android:bottomLeftRadius="8dp" />
        </shape>
    </item>

    <item
        android:left="200dp"
        android:top="200dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="#4169E1" />
            <corners android:bottomRightRadius="8dp" />
        </shape>
    </item>
</layer-list>
